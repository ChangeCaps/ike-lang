import std::map
import std::option

type body 'type = {
  path:   [str]
  locals: map int (local 'type)
  inputs: [pattern 'type]
  expr:   option (expr 'type)
  type:   'type
}

type body::id 'type = {
  index: int
}

type local 'type = {
  name: str
  type: 'type
}

type local::id 'type = {
  index: int
}
